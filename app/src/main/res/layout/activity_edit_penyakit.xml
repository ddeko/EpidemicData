<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" >

        <include
            layout="@layout/view_default_actionbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/linearLayout2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_container"
                android:paddingLeft="20dp"
                android:background="@color/fbutton_color_asbestos">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Albert Einsteins"
                    android:id="@+id/disease_detail_uploader_name"
                    android:textStyle="bold"
                    android:textColor="@color/actionbar_dark_color"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_header"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_below="@+id/profile_container"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="8dp">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="140dp"
                    android:id="@+id/get_map_btn">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/disease_image"
                        android:src="@drawable/maps_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Maps"
                        android:id="@+id/textView8"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/actionbar_dark_color"
                        android:textSize="15sp"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="false"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:id="@+id/disease_details_1"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Tuberkulosis"
                        android:id="@+id/disease_detail_name"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Penyakit Menular"
                        android:id="@+id/disease_detail_type"
                        android:textColor="@color/actionbar_dark_color"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="3dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Jumlah Penderita :"
                            android:id="@+id/textView4"
                            android:textStyle="bold"
                            android:textColor="@color/grey_font"
                            android:textSize="17sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="10"
                            android:id="@+id/disease_detail_number"
                            android:layout_marginLeft="5dp"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:textColor="@color/grey_font" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_body_1"
                android:layout_below="@+id/detail_header">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/divider_1"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:background="@color/fbutton_color_asbestos">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Deskripsi"
                        android:id="@+id/textView5"
                        android:textColor="@color/actionbar_dark_color"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_1"
                    android:id="@+id/disease_detail_2"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="7dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Tuberkulosis adalah penyakit infeksi saluran pernapasan yang disebabkan oleh bakteri basil. Bakteri basil yang menginfeksi adalah bakteri basil yang sangat kuat. "
                        android:id="@+id/disease_detail_desc"
                        android:singleLine="false" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/disease_detail_2"
                    android:id="@+id/divider_2"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:background="@color/fbutton_color_asbestos">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Gejala"
                        android:id="@+id/textView6"
                        android:textColor="@color/actionbar_dark_color"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_2"
                    android:id="@+id/disease_detail_3"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="7dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="TBC adalah penyakit yang menyerang pernapasan. Maka penularannya pun melalui pernapasan. Berdekatan dengan penderita TBC dapat memungkinkan kita untuk tertular. Selain itu, ketika penderita TBC batuk pun, bisa jadi itu merupakan sarana penularan TBC."
                        android:id="@+id/disease_detail_gejala"
                        android:singleLine="false" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/disease_detail_3"
                    android:id="@+id/divider_3"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:background="@color/fbutton_color_asbestos">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Saran Penanganan"
                        android:id="@+id/textView7"
                        android:textColor="@color/actionbar_dark_color"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_3"
                    android:id="@+id/disease_detail_4"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="7dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Tuberkulosis adalah penyakit infeksi saluran pernapasan yang disebabkan oleh bakteri basil. Bakteri basil yang menginfeksi adalah bakteri basil yang sangat kuat. "
                        android:id="@+id/disease_detail_saran"
                        android:singleLine="false" />
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_simpan"
                android:text="Simpan"
                android:layout_below="@+id/detail_body_1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/button_simpan"
                android:id="@+id/detail_body_2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/divider_4"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:background="@color/fbutton_color_asbestos">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Multimedia"
                        android:id="@+id/textView9"
                        android:textColor="@color/actionbar_dark_color"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <GridView
                    android:id="@+id/disease_image_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_4"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:drawSelectorOnTop="true"
                    android:listSelector="@drawable/grid_selector"
                    android:verticalSpacing="0dp"
                    android:horizontalSpacing="0dp"
                    android:rotation="-90"
                    android:rotationX="180"
                    android:scrollingCache="true"
                    android:smoothScrollbar="true"
                    android:alwaysDrawnWithCache="true" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>