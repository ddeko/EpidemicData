<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fbutton_color_asbestos"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center"
        android:gravity="center">


        <RelativeLayout
            android:id="@+id/imageChallangeContainer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageRedeem"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_redeem_white_36dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageChallangeContainer"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageRewards"
                    android:text="Rewards A"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:layout_toLeftOf="@+id/textPoin"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/actionbar_color" />

                <TextView
                    android:id="@+id/textNamaRewards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageRewards"
                    android:text="Rewards hadiah utama"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:layout_toLeftOf="@+id/textPoin"
                    android:ellipsize="end"
                    android:layout_below="@id/textNamaRewards"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:singleLine="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textRedeemKey"
                        android:layout_alignParentRight="true"
                        android:text="10  Poin"
                        android:textColor="#596465"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#596465"/>

</LinearLayout>
